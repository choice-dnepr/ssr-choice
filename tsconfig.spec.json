/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@store/*": ["src/app/store/*"],
      "@view/*": ["src/app/view/*"],
      "@styles/*": ["src/assets/styles/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
